<%- include ('./partials/header') %>

<link rel="stylesheet" href="/css/countrySelect.min.css">


<div class="container-fluid justify-content-center">
    <div class="row row-eq-height mt-3 text-center">
        <div class="col-6 col-md-3 col-lg-2 mx-auto order-2 order-md-1">
            <div class="section" id="section1">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" onclick="countryCheckbox(this)" id="<%= country.code %>" checked>
                    <label class="custom-control-label" for="<%= country.code %>"><%= country.name %></label>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-9 col-lg-10 mb-3 mx-auto order-1 order-md-2">
            <div class="section" id="section2">
                <h1><%= text.LATEST_STATS %></h1>
                <input id="country_selector" type="text" autocomplete="off">
                <div class="chart-container mx-auto">
                    <canvas id="globalChart"></canvas>
                </div>
                <p id="stats-p" style="display: none;"><%= stats %></p>
                <p id="texts" style="display: none;"><%= JSON.stringify(text) %></p>
            </div>
        </div>
    </div>
</div>
<%- include ('./partials/footer') %>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>
<!-- <script src="https://cdn.jsdelivr.net/npm/hammerjs@2.0.8"></script> -->
<script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-zoom@0.7.4"></script>
<script src="/js/countrySelect.min.js"></script>
